//  background func
bg-image(url, type= 'png')
  background-image url(url + "_2x." + type);
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image url(url + "_3x." + type)

// nowrap
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

// extend click area
extend-click()
  position relative
  &:before
    content ''
    position absolute
    top -20px
    left -20px
    right -20px
    bottom -20px

// border 1px
border-1px(color, site='bottom')
  position relative
  &:after
    display block
    position absolute
    left 0
    {site} 0
    width 100%
    border-top 1px solid color
    content ''


// cancel border 1px
border-none()
  &:after
    display none

// set placeholder color
placeholder-color(color)
  &::-webkit-input-placeholder
    color color
  &:-moz-placeholder
    color color
  &::-moz-placeholder
    color color
  &:-ms-input-placeholder
    color color

// gradient border
gradient-hairline(direction = bottom, color = rgba(255,255,255,0.2))
  position relative
  if direction == bottom
    &::after
      content ' '
      position absolute
      left 0
      bottom 0
      z-index 2
      width 100%
      height 1PX
      background-image -webkit-linear-gradient( to left, rgba(255,0,0,0) 0%, color 50%, rgba(255,0,0,0) 100%)
      background-image -moz-linear-gradient( to left, rgba(255,0,0,0) 0%, color 50%, rgba(255,0,0,0) 100%)
      background-image -o-linear-gradient( to left, rgba(255,0,0,0) 0%, color 50%, rgba(255,0,0,0) 100%)
      background-image linear-gradient( to left, rgba(255,0,0,0) 0%, color 50%, rgba(255,0,0,0) 100%)
  else if direction == top
    &::before
      content ' '
      position absolute
      left 0
      top 0
      z-index 2
      width 100%
      height 1PX
      background-image -webkit-linear-gradient( to left, rgba(255,0,0,0) 0%, color 50%, rgba(255,0,0,0) 100%)
      background-image -moz-linear-gradient( to left, rgba(255,0,0,0) 0%, color 50%, rgba(255,0,0,0) 100%)
      background-image -o-linear-gradient( to left, rgba(255,0,0,0) 0%, color 50%, rgba(255,0,0,0) 100%)
      background-image linear-gradient( to left, rgba(255,0,0,0) 0%, color 50%, rgba(255,0,0,0) 100%)

